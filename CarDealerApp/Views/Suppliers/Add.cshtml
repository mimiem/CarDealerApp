<h2>Add Supplier</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Name:")
        <input type="text" id="name" name="name" />
    </div>
    <div class="form-group">
        @Html.Label("Is importer:") 
        @Html.CheckBox("isImporter")
        @*<input type="text" id="isImporter" name="isImporter" />*@
    </div>
    <div class="form-group">
        @Html.Label("Parts:")
        <input type="text" id="parts" name="parts" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
}
