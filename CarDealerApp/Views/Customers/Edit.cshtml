@model CarDealer.Models.ViewModels.EditCustomerViewModel

<h2>Edit Customer</h2>

@using (Html.BeginForm())
{
    <input type="number" name="Id" hidden="hidden" value="@Html.DisplayFor(model=>model.Id)" />
    <div class="form-group">
        @Html.LabelFor(model=>model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttribute = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model=>model.BirthDate)
        @Html.EditorFor(model => model.BirthDate,
       new { htmlAttribute = new { @class = "form-control",
            type = "date"}})
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" />
    </div>
}
    
